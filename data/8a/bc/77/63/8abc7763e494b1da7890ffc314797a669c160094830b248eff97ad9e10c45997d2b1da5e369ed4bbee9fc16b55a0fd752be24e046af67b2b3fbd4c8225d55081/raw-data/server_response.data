  // gif playback control
  var videos = document.querySelectorAll('.video');

  for (var i = 0; i < videos.length; i++) {
    setupGifControls(videos[i]);
  }

  function setupGifControls(video) {
    console.log('setup');
    var gif = video.querySelector('.gif');
    var png = video.querySelector('.png');
    var isPlaying = false;

    if (!gif || !png) {
      return;
    }

    video.addEventListener('click', togglePlay);

    function togglePlay() {
      isPlaying = !isPlaying;
      video.className = isPlaying ? 'video' : 'video video--paused';
      png.style.display = isPlaying ? 'none' : '';
      gif.style.display = isPlaying ? '' : 'none';
      gif.setAttribute('src', gif.getAttribute('src'));
    };
  }
